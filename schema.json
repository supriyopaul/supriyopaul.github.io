{
  "$schema": "http://json-schema.org/draft/2020-12/schema",
  "title": "ProfessionalJourney",
  "description": "A comprehensive schema to store a personal and professional narrative.",
  "type": "object",
  "properties": {
    "personalDetails": {
      "type": "object",
      "properties": {
        "fullName": { "type": "string", "description": "Full legal name." },
        "brandingStatements": {
          "type": "array",
          "description": "Short, powerful statements for summaries (e.g., 'Aspiring system architect').",
          "items": { "type": "string" }
        },
        "profileImage": { "type": "string", "format": "uri" },
        "narrativeSummary": {
          "type": "string",
          "description": "A rich, paragraph-style summary for the portfolio website. Supports Markdown."
        },
        "contact": {
          "type": "object",
          "properties": {
            "email": { "type": "string", "format": "email" },
            "phone": { "type": "string" },
            "location": { "type": "string" },
            "linkedin": { "type": "string", "format": "uri" },
            "github": { "type": "string", "format": "uri" },
            "website": { "type": "string", "format": "uri" }
          }
        }
      },
      "required": ["fullName"]
    },
    "timeline": {
      "type": "array",
      "description": "A chronological list of all professional and personal milestones.",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "description": "A unique identifier for this timeline entry."},
          "type": { "type": "string", "enum": ["education", "experience", "project", "personal_milestone"] },
          "heading": { "type": "string", "description": "The main title for the timeline entry (e.g., 'Software Engineer' or 'University Days')." },
          "organization": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "logoUrl": { "type": "string", "format": "uri", "description": "URL for the company/school logo." }
            }
          },
          "role": { "type": "string", "description": "Your official title or role." },
          "location": { "type": "string" },
          "startDate": { "type": "string", "format": "date" },
          "endDate": { "type": ["string", "null"], "format": "date" },
          "narrative": { "type": "string", "description": "The full, rich story for your portfolio website. Supports Markdown." },
          "resumePoints": {
            "type": "array",
            "description": "Concise bullet points suitable for a one-page resume.",
            "items": { "type": "string" }
          },
          "skillsUsed": {
            "type": "array",
            "description": "Key skills applied during this period.",
            "items": {
              "type": "object",
              "properties": {
                "category": { "type": "string" },
                "skills": { "type": "array", "items": { "type": "string" } }
              }
            }
          },
          "media": {
            "type": "array",
            "description": "Associated images, videos, or documents.",
            "items": {
              "type": "object",
              "properties": {
                "type": { "type": "string", "enum": ["image", "video", "link"] },
                "url": { "type": "string", "format": "uri" },
                "caption": { "type": "string" }
              }
            }
          },
          "theme": {
             "type": "object",
             "description": "UI properties for the portfolio website.",
             "properties": {
                "primaryColor": { "type": "string", "description": "A hex code for styling." }
             }
          }
        },
        "required": ["id", "type", "heading", "startDate"]
      }
    },
    "skillsSummary": {
      "type": "array",
      "description": "A categorized overview of all skills for a resume section.",
      "items": {
        "type": "object",
        "properties": {
          "category": { "type": "string", "description": "e.g., 'Languages', 'Databases', 'DevOps Tools'." },
          "skills": { "type": "array", "items": { "type": "string" } }
        }
      }
    },
    "certifications": {
        "type": "array",
        "description": "A centralized list of all certifications.",
        "items": {
            "type": "object",
            "properties": {
                "name": { "type": "string" },
                "issuer": { "type": "string" },
                "date": { "type": "string", "format": "date" },
                "certificateURL": { "type": "string", "format": "uri" }
            }
        }
    },
    "personalInterests": {
      "type": "array",
      "description": "Details about hobbies and personal interests.",
      "items": {
        "type": "object",
        "properties": {
          "interest": { "type": "string", "description": "e.g., 'Badminton', 'Reading'." },
          "details": { "type": "string", "description": "e.g., 'Won several internal tournaments at H&M.' or 'Favorite authors are Yuval Noah Harari and Paulo Coelho.'" }
        }
      }
    }
  },
  "required": ["personalDetails", "timeline", "skillsSummary"]
}